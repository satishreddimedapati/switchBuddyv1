rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can create their own user document upon signup
    // and can only read or update their own document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Users can only read and write their own job applications.
    match /job-applications/{jobId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only read and write their own daily tasks.
    match /daily_tasks/{taskId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only read and write their own interview plans.
    match /interview_plans/{planId} {
       allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Placeholder for interview_sessions, allowing authenticated users to manage their own sessions.
    // We will build this out fully later.
    match /interview_sessions/{sessionId} {
       allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
